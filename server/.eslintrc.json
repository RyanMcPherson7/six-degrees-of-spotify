{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "ignorePatterns": ["**/node_modules/**/*"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": false,
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": "warn",
    "func-names": "off",
    "spaced-comment": "warn",
    "prefer-destructuring": "off",
    "no-plusplus": "off",
    "no-await-in-loop": "off"
  }
}
