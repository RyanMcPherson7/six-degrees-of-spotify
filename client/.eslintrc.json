{
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "ignorePatterns": ["**/node_modules/**/*"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": false,
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": "warn",
    "func-names": "off",
    "spaced-comment": "warn"
  }
}
